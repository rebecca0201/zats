<zk>
	<vbox>
		<textbox id="myCookie" value="hello" />
		<hbox>
			<label value="cookies:" />
			<label id="msg" />
		</hbox>
		<button id="set" label="set cookie" onClick="setCookie();" />
		<button id="delete" label="erase cookie" onClick="eraseCookie();" />
		<button id="show" label="show cookies" onClick="showCookies();" />
	</vbox>
	<zscript><![CDATA[
	public void setCookie() {
		jakarta.servlet.http.HttpServletResponse resp = (jakarta.servlet.http.HttpServletResponse)Executions.getCurrent().getNativeResponse();
		resp.addCookie(new jakarta.servlet.http.Cookie("myCookie", myCookie.getValue()));
	}
	public void eraseCookie() {
		jakarta.servlet.http.HttpServletResponse resp = (jakarta.servlet.http.HttpServletResponse)Executions.getCurrent().getNativeResponse();
		jakarta.servlet.http.Cookie cookie = new jakarta.servlet.http.Cookie("myCookie", null);
		cookie.setMaxAge(0);
		resp.addCookie(cookie);
	}
	public void showCookies() {
		jakarta.servlet.http.HttpServletRequest req = (jakarta.servlet.http.HttpServletRequest)Executions.getCurrent().getNativeRequest();
		StringBuilder sb = new StringBuilder();
		for(jakarta.servlet.http.Cookie c : req.getCookies())
			sb.append(c.getName()).append("=").append(c.getValue()).append(";");
		msg.setValue(sb.toString());
	}
]]>
	</zscript>
</zk>